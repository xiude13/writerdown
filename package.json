{
  "name": "writerdown",
  "displayName": "WriterDown",
  "description": "Enhanced Markdown syntax highlighting for writers",
  "version": "0.0.1",
  "publisher": "writerdown",
  "engines": {
    "vscode": "^1.74.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ekinertac/writerdown.git"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "markdown",
    "writing",
    "syntax highlighting",
    "writers"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "writerdown",
        "aliases": [
          "WriterDown",
          "writerdown"
        ],
        "extensions": [
          ".md"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "writerdown",
        "scopeName": "text.html.markdown.writerdown",
        "path": "./syntaxes/writerdown.tmLanguage.json"
      }
    ],
    "semanticTokenScopes": [
      {
        "scopes": {
          "markup.dialogue.writerdown": [
            "string.dialogue.writerdown"
          ],
          "markup.dialogue.speech.writerdown": [
            "string.dialogue.speech.writerdown"
          ]
        }
      }
    ],
    "configurationDefaults": {
      "[writerdown]": {
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 70,
        "editor.cursorSurroundingLines": 0,
        "editor.tabSize": 2,
        "editor.wrappingIndent": "same"
      },
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": "markup.dialogue.writerdown",
            "settings": {
              "foreground": "#E5C07B",
              "fontStyle": "italic"
            }
          },
          {
            "scope": "markup.dialogue.speech.writerdown",
            "settings": {
              "foreground": "#98C379",
              "fontStyle": "italic"
            }
          },
          {
            "scope": "markup.character.writerdown",
            "settings": {
              "foreground": "#61AFEF",
              "fontStyle": "bold"
            }
          },
          {
            "scope": "entity.name.character.writerdown",
            "settings": {
              "foreground": "#E06C75",
              "fontStyle": "bold"
            }
          },
          {
            "scope": "punctuation.definition.character.writerdown",
            "settings": {
              "foreground": "#61AFEF",
              "fontStyle": "bold"
            }
          },
          {
            "scope": "punctuation.definition.marker.writerdown",
            "settings": {
              "foreground": "#C678DD",
              "fontStyle": "bold"
            }
          },
          {
            "scope": "entity.name.marker.writerdown",
            "settings": {
              "foreground": "#56B6C2",
              "fontStyle": "italic"
            }
          },
          {
            "scope": "entity.name.category.writerdown",
            "settings": {
              "foreground": "#D19A66",
              "fontStyle": "bold"
            }
          },
          {
            "scope": "punctuation.definition.category.writerdown",
            "settings": {
              "foreground": "#C678DD"
            }
          },
          {
            "scope": "markup.highlight.parentheses.writerdown",
            "settings": {
              "foreground": "#C678DD"
            }
          }
        ]
      }
    },
    "commands": [
      {
        "command": "writerdown.setLanguage",
        "title": "Set Language to WriterDown",
        "category": "WriterDown"
      },
      {
        "command": "writerdown.refreshCharacters",
        "title": "Refresh Characters",
        "icon": "$(refresh)"
      },
      {
        "command": "writerdown.newCharacter",
        "title": "New Character",
        "icon": "$(add)"
      },
      {
        "command": "writerdown.openCharacterCard",
        "title": "Open Character Card",
        "icon": "$(person)"
      },
      {
        "command": "writerdown.goToCharacter",
        "title": "Go to Character Mention",
        "icon": "$(go-to-file)"
      },
      {
        "command": "writerdown.renameCharacter",
        "title": "Rename Character",
        "icon": "$(edit)"
      },
      {
        "command": "writerdown.changeCategory",
        "title": "Change Category",
        "icon": "$(tag)"
      },
      {
        "command": "writerdown.assignCategory",
        "title": "Assign Category",
        "icon": "$(tag)"
      },
      {
        "command": "writerdown.refreshTasks",
        "title": "Refresh Writer Tasks",
        "icon": "$(refresh)"
      },
      {
        "command": "writerdown.goToTask",
        "title": "Go to Task",
        "icon": "$(go-to-file)"
      },
      {
        "command": "writerdown.refreshStructure",
        "title": "Refresh Structure",
        "icon": "$(refresh)"
      },
      {
        "command": "writerdown.goToStructure",
        "title": "Go to Structure",
        "icon": "$(go-to-file)"
      },
      {
        "command": "writerdown.newChapter",
        "title": "New Chapter",
        "icon": "$(add)"
      },
      {
        "command": "writerdown.runTests",
        "title": "Run WriterDown Tests",
        "category": "WriterDown"
      },
      {
        "command": "writerdown.showWordCountDetails",
        "title": "Show Word Count Details",
        "category": "WriterDown"
      },
      {
        "command": "writerdown.showPageCountDetails",
        "title": "Show Page Count Details",
        "category": "WriterDown"
      },
      {
        "command": "writerdown.formatNovel",
        "title": "Format Novel (Clean Up)",
        "category": "WriterDown"
      },
      {
        "command": "writerdown.cleanIndentation",
        "title": "Remove Problematic Indentation",
        "category": "WriterDown"
      },
      {
        "command": "writerdown.exportNovel",
        "title": "Export with Novel Formatting",
        "category": "WriterDown"
      },
      {
        "command": "writerdown.cleanMarkup",
        "title": "Clean WriterDown Markup (Preview)",
        "category": "WriterDown"
      },
      {
        "command": "writerdown.exportCleanMarkdown",
        "title": "Export Clean Markdown File",
        "category": "WriterDown"
      },
      {
        "command": "writerdown.exportChapterClean",
        "title": "Export All Chapters (Clean)",
        "category": "WriterDown"
      },
      {
        "command": "writerdown.exportAllFormats",
        "title": "Export to All Formats (Markdown, HTML, PDF)",
        "category": "WriterDown"
      },
      {
        "command": "writerdown.debugStructure",
        "title": "Debug Structure Provider",
        "category": "WriterDown"
      },
      {
        "command": "writerdown.searchStoryEvents",
        "title": "Search Story Markers",
        "icon": "$(search)"
      },
      {
        "command": "writerdown.clearStoryEventsSearch",
        "title": "Clear Search",
        "icon": "$(clear-all)"
      },
      {
        "command": "writerdown.searchCharacters",
        "title": "Search Characters",
        "icon": "$(search)"
      },
      {
        "command": "writerdown.clearCharactersSearch",
        "title": "Clear Search",
        "icon": "$(clear-all)"
      },
      {
        "command": "writerdown.focusNextPanel",
        "title": "Focus Next WriterDown Panel",
        "category": "WriterDown"
      },
      {
        "command": "writerdown.focusPreviousPanel",
        "title": "Focus Previous WriterDown Panel",
        "category": "WriterDown"
      },
      {
        "command": "writerdown.resetPanelOrder",
        "title": "Reset Panel Order to Default",
        "category": "WriterDown"
      },
      {
        "command": "writerdown.refreshMarkers",
        "title": "Refresh Story Markers",
        "icon": "$(refresh)"
      },
      {
        "command": "writerdown.goToMarker",
        "title": "Go to Marker",
        "icon": "$(go-to-file)"
      },
      {
        "command": "writerdown.addChapterMetadata",
        "title": "Add Chapter Metadata",
        "category": "WriterDown"
      }
    ],
    "views": {
      "writerdown-sidebar": [
        {
          "id": "writerdown-structure",
          "name": "Story Structure"
        },
        {
          "id": "writerdown-markers",
          "name": "Story Markers"
        },
        {
          "id": "writerdown-characters",
          "name": "Characters"
        },
        {
          "id": "writerdown-tasks",
          "name": "Writer Tasks"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "writerdown-sidebar",
          "title": "WriterDown",
          "icon": "$(book)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "writerdown.refreshStructure",
          "when": "view == writerdown-structure",
          "group": "navigation"
        },
        {
          "command": "writerdown.newChapter",
          "when": "view == writerdown-structure",
          "group": "navigation"
        },
        {
          "command": "writerdown.refreshCharacters",
          "when": "view == writerdown-characters",
          "group": "navigation"
        },
        {
          "command": "writerdown.newCharacter",
          "when": "view == writerdown-characters",
          "group": "navigation"
        },
        {
          "command": "writerdown.refreshTasks",
          "when": "view == writerdown-tasks",
          "group": "navigation"
        },
        {
          "command": "writerdown.refreshMarkers",
          "when": "view == writerdown-markers",
          "group": "navigation"
        },
        {
          "command": "writerdown.searchStoryEvents",
          "when": "view == writerdown-markers",
          "group": "navigation@1"
        },
        {
          "command": "writerdown.clearStoryEventsSearch",
          "when": "view == writerdown-markers",
          "group": "navigation@2"
        },
        {
          "command": "writerdown.searchCharacters",
          "when": "view == writerdown-characters",
          "group": "navigation@1"
        },
        {
          "command": "writerdown.clearCharactersSearch",
          "when": "view == writerdown-characters",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "writerdown.goToStructure",
          "when": "view == writerdown-structure",
          "group": "inline"
        },
        {
          "command": "writerdown.openCharacterCard",
          "when": "view == writerdown-characters",
          "group": "inline"
        },
        {
          "command": "writerdown.goToCharacter",
          "when": "view == writerdown-characters",
          "group": "inline@2"
        },
        {
          "command": "writerdown.renameCharacter",
          "when": "view == writerdown-characters && (viewItem == characterWithCategory || viewItem == characterWithoutCategory)",
          "group": "context"
        },
        {
          "command": "writerdown.changeCategory",
          "when": "view == writerdown-characters && viewItem == characterWithCategory",
          "group": "context@1"
        },
        {
          "command": "writerdown.assignCategory",
          "when": "view == writerdown-characters && viewItem == characterWithoutCategory",
          "group": "context@1"
        },
        {
          "command": "writerdown.goToTask",
          "when": "view == writerdown-tasks",
          "group": "inline"
        },
        {
          "command": "writerdown.goToMarker",
          "when": "view == writerdown-markers",
          "group": "inline"
        }
      ]
    },
    "keybindings": [
      {
        "command": "writerdown.focusNextPanel",
        "key": "alt+down",
        "when": "focusedView =~ /^writerdown-/"
      },
      {
        "command": "writerdown.focusPreviousPanel",
        "key": "alt+up",
        "when": "focusedView =~ /^writerdown-/"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "npm run compile && rm writerdown-0.0.1.vsix && npx vsce package",
    "test": "npm run compile && echo 'Tests are integrated into VS Code extension. Use \"WriterDown: Run Tests\" command in VS Code.'"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/html-pdf": "^3.0.3",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@vscode/test-electron": "^2.3.0",
    "glob": "^8.1.0",
    "html-pdf": "^3.0.1",
    "mocha": "^10.2.0",
    "puppeteer": "^24.10.1",
    "typescript": "^4.9.4"
  }
}